mixin colorsList(colorCode, title, background)
    section.ui-colors
        .ui-colors__color(class= background)
        .ui-colors__description
            h2.ui-colors__title.title-h2 #{title}
            p.ui-colors__code #{colorCode}

mixin fontSize(size, content, title)
    section.ui-fonts
        .ui-fonts__font-size(class= title).ui-fonts__font-size_font-weight= size
        p.ui-fonts__content(class= title)= content

